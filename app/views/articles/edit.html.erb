<div class = "container">
  <div class = "row">
    <div class ="col-md-3"></div>
    <div class ="col-md-8 offset-md-1">
      <h1>Edit Article</h1>
      <% if @article.errors.any? %>
        <%= @article.errors.count %>件のエラーが発生しました<br />
        <% @article.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
      <% end %>
      <%= form_with model:@article, local:true do |f| %>
      <div class = "form">
        <%= f.label :title %><br />
        <%= f.text_field :title %>
      </div>

      <div class = "form">
        <%= f.label :category %><br />
        <%= f.text_field :category %>
      </div>

      <div class = "form">
        <%= f.label :image %><br />
        <%= f.attachment_field :image %>
      </div>

      <div class = "form">
        <%= f.label :body %><br />
        <%= f.text_area :body %>
      </div>

      <%= f.submit '投稿編集' %>

    <% end %>
    </div>
  </div>
</div>